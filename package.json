{
  "name": "@maxgfr/multi-deployments",
  "private": true,
  "description": "Github action which lets you to handle deployments status with multiple environments",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run package && npm run lint && npm test",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxgfr/multi-deployments.git"
  },
  "keywords": [
    "actions",
    "multi-deployments",
    "deployments"
  ],
  "author": "maxgfr",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/github": "6.0.0"
  },
  "devDependencies": {
    "@types/node": "20.17.17",
    "@typescript-eslint/parser": "7.18.0",
    "@vercel/ncc": "0.38.3",
    "eslint": "9.20.1",
    "eslint-plugin-github": "5.1.8",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "js-yaml": "4.1.0",
    "lint-staged": "15.4.3",
    "prettier": "3.5.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "*.ts": "npm run format --fix"
  }
}
